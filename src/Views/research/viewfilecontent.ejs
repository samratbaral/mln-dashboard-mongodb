<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                
                <h2>File Manager</h2>
            <h4>Current Directory (Local File System)</h4>
            <i>
                <%= directory %>
            </i>
            <br>
                <form action="/viewfilecontent" method="GET">
                    <div id='left'>
                        <left class="header__item">
                            <% if(directory === userpath) { %>
                                ...
                            <% } else { %>
                        <a class="<%= path === '/cd' ? 'active' : '' %>"
                            href="/cd?directory=<%= directory %>&selectedFolder=..&userpath=<%= userpath %>">
                            Go back
                        </a>
                        <% } %>
                            <% for(let i=0; i < files.length; i++) { %>
                                <% if (files[i].includes(".")) { %>
                                    <li class="header__item">
                                        <a class="<%= path === '/viewfilecontent' ? 'active' : '' %>"
                                        href="/viewfilecontent?directory=<%= directory %>&selectedFile=<%= files[i] %>&userpath=<%= userpath%>">
                                            ├─<%= files[i] %>
                                        </a>
                                    </li>
                                    <% } else { %>
                                        <li class="main-header__item">
                                            <a class="<%= path === '/cd' ? 'active' : '' %>"
                                            href="/cd?directory=<%= directory %>&selectedFolder=<%= files[i] %>&userpath=<%= userpath %>">
                                                ├──<%= files[i] %>
                                            </a>
                                        </li>
                                        <% } %>
                                            <% } %>
                        </left>
                    </div>


                    <left>
                        <form id="right">
                        <h3>View File</h3>
                        <% lines.forEach(line=> { %>
                            <p>
                                <%= line %>
                            </p>
                            <% }) %>


                </form>
                </left>

                </form>

            </main>
            <%- include('../includes/end.ejs') %>