<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <h2>File Manager</h2>
                <h4>Current Directory (Local File System)</h4>
                <i>
                    <%- jsonData['DIRECTORY']%>
                </i>
                <br>

                <form action="/viewfiles" method="POST">

                    <div id='left'>
                        <h3>All File</h3>
                        <left>
                            <a href="http://127.0.0.1:5000/cd?path=..">Go Back</a>
                            <br>
                            <% for(var i=0; i < jsonData['FILES'].length; i++) {%>

                                <a
                                    href="http://127.0.0.1:5000/cd?path=<%= jsonData['DIRECTORY']+'/'+jsonData['FILES'][i] %>">
                                    <%= jsonData['FILES'][i]%>
                                </a>
                                <br>
                                <% } %>
                        </left>
                    </div>

                    <div id='right'>
                        <h3>View File</h3>
                    </div>
                </form>

            </main>
            <%- include('../includes/end.ejs') %>